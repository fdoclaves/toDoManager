<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsSettingsTaskActivity">

    <Switch
        android:id="@+id/switchNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/notificationsActive"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notifacionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:onClick="set_hour"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/setHour"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:drawableStart="@drawable/ic_access_time_white"
        android:drawablePadding="1dp"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="@+id/switchNotification"
        app:layout_constraintStart_toStartOf="@+id/switchNotification"
        app:layout_constraintTop_toBottomOf="@+id/switchNotification" />

    <ImageButton
        android:id="@+id/imageButtonNotificationSave"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:onClick="save"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <Spinner
        android:id="@+id/spinnerNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/notifacionButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/notifacionButton"
        app:layout_constraintTop_toBottomOf="@+id/notifacionButton" />

    <Button
        android:id="@+id/buttonDateNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:onClick="set_date"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/addDate"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:drawableStart="@drawable/ic_action_calendar_day_white"
        android:drawablePadding="3dp"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="@+id/switchNotification"
        app:layout_constraintStart_toStartOf="@+id/switchNotification"
        app:layout_constraintTop_toBottomOf="@+id/spinnerNotification" />

</android.support.constraint.ConstraintLayout>